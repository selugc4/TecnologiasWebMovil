extends layout

include _includes/sharedHTMLfunctions

block content
    .row.banner.border-bottom.mb-4
        .col-12 
            h1 Loc8r 
                small.text-muted.fs-3 Find places to work with wifi near you!
    .row
        .col-12.col-md-8
            each location in locations
                .card
                    .card-body 
                        h4
                            a(href='/location/') #{location.name} 
                            small &nbsp;
                                +outputRating(location.rating)
                            span.badge.rounded-pill.bg-primary.float-end #{location.distance}
                        p.address #{location.address}
                        p.facilities
                            each facility in location.facilities
                                span.badge.bg-warning #{facility}
                                | 
        .col-12.col-md-4
            p.lead Loc8r helps you find places to work when out and about. Perhaps with coffee, cake or a pint? Let Loc8r help you find the place you're looking for.
        